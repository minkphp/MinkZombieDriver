{
    "name":         "behat/mink-zombie-driver",
    "description":  "Zombie.js driver for Mink framework",
    "keywords":     ["zombie", "headless", "javascript", "ajax", "testing", "browser"],
    "homepage":     "https://mink.behat.org/",
    "type":         "mink-driver",
    "license":      "MIT",

    "authors": [
        {
            "name":      "Pascal Cremer",
            "email":     "b00gizm@gmail.com",
            "homepage":  "https://github.com/b00gizm"
        },
        {
            "name":      "Konstantin Kudryashov",
            "email":     "ever.zet@gmail.com",
            "homepage":  "http://everzet.com"
        }
    ],

    "require": {
        "ext-json": "*",
        "ext-sockets":      "*",
        "php":              ">=7.2",
        "behat/mink":       "~1.9@dev",
        "symfony/process":  "^4.4 || ^5.0 || ^6.0"
    },

    "require-dev": {
        "mink/driver-testsuite": "dev-master",
        "phpunit/phpunit": "^8.5.22 || ^9.5.11",
        "symfony/error-handler": "^4.4.36 || ^5.4.2 || ^6.0.2"
    },

    "autoload": {
        "psr-4": {
            "Behat\\Mink\\Driver\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Behat\\Mink\\Tests\\Driver\\": "tests"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
